do_install() {
    ./build.sh --install
    vbin bin/batdiff
    vbin bin/batgrep
    vbin bin/batman
    vbin bin/batpipe
    vbin bin/batwatch
    vbin bin/prettybat

    vlicense LICENSE.md
}
